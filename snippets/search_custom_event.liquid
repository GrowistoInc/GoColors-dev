<script>
document.addEventListener('DOMContentLoaded', function () {

  console.log('ğŸ” Search tracking script loaded');

  const urlParams = new URLSearchParams(window.location.search);
  const searchTerm = urlParams.get('q') || urlParams.get('_ss');

  console.log('Search term:', searchTerm);

  if (window.location.pathname.includes('/search') && searchTerm) {

    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      event: 'search',
      search_term: searchTerm
    });

    console.log('âœ… GA4 search event pushed to dataLayer', searchTerm);
  }
});
</script>
