<style>
  .shopify-section-{{ section.id }}.homepage-flip-slider {
    padding-block: {{ section.settings.padding_top_mob }}px {{ section.settings.padding_bottom_mob }}px;
  }
  .homepage-flip-slider-main-wrapper{
    position:relative;
  }
  .homepage-flip-slider-header{
    padding-bottom: 1%;
  }
  .homepage-flip-slider-header h2.homepage-flip-slider__heading {
    font-weight: 500;
    {% comment %} text-transform: uppercase; {% endcomment %}
    line-height: 1.5;
    color: #221f20c7;
    margin:0;
  }
  .homepage-flip-slider-header p.homepage-flip-slider__subheading {
    margin:0;
  }
  .flip-slider-container .swiper {
    width: 100%;
  }
  .flip-slider-container .swiper-slide {
    text-align: center;
    overflow: hidden;
    border-radius: 12px;
  }
  .flip-slider-container .swiper-slide img {
    width: 100%;
    height: auto;
    display: block;
  }
  .homepage-flip-slider .swiper-button-next.flip-slider-button-next,
  .homepage-flip-slider .swiper-button-prev.flip-slider-button-prev {
    top: 56%;
    background-color: #fff;
    border-radius: 25px;
    z-index: 1;
    width: 30px;
    height: 30px;
    display: block;
    border: .5px solid black;
  }
  .homepage-flip-slider .swiper-button-next.flip-slider-button-next {
    padding: 0px 3px 3px 11px;
  }
  .homepage-flip-slider .swiper-button-prev.flip-slider-button-prev {
    padding: 0px 3px 3px 8px;
  }
  .homepage-flip-slider .swiper-pagination-bullet {
      border: .5px solid black;
  }
  .homepage-flip-slider .swiper-pagination-bullet.swiper-pagination-bullet-active {
      border: .5px solid #df2e84;
  }
  .homepage-flip-slider .swiper-pagination.swiper-pagination-clickable.swiper-pagination-bullets.swiper-pagination-horizontal{
    position:relative;
    z-index:1;
  }
  

   @media screen and (min-width: 1200px) {
     .shopify-section-{{ section.id }}.homepage-flip-slider {
      padding-block: {{ section.settings.padding_top }}px {{ section.settings.padding_bottom }}px;
    }
   }
</style>

<div class="homepage-flip-slider shopify-section-{{ section.id }}" id="homepage-flip-slider-{{ section.id }}">
  <div class="homepage-flip-slider-main-wrapper">
    <div class="page-width">
      {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <div class="homepage-flip-slider-header">
          {% if section.settings.heading != blank %}
            <h2 class="homepage-flip-slider__heading">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <p class="homepage-flip-slider__subheading">{{ section.settings.subheading }}</p>
          {% endif %}
        </div>
      {% endif %}
      <div class="flip-slider-container" id="flip-slider-container-{{ section.id }}">
        <div class="swiper mySwiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide">
                <a href="{{ block.settings.url | default: '#' }}">
                  <picture>
                    {% if block.settings.mobile_image != blank %}
                      <source media="(max-width: 600px)" srcset="{{ block.settings.mobile_image | img_url: '520x' }}">
                    {% endif %}
                    {% if block.settings.desktop_image != blank %}
                      <img
                        src="{{ block.settings.desktop_image | img_url: '720x' }}"
                        alt="{{ block.settings.alt_text | escape }}"
                        loading="lazy"
                        class="desktop-img"
                      >
                    {% endif %}
                  </picture>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
      <div class="swiper-button-prev flip-slider-button-prev small-hide"></div>
      <div class="swiper-button-next flip-slider-button-next small-hide"></div>
      <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('#flip-slider-container-{{ section.id }} .mySwiper', {
      slidesPerView: 2.4,
      spaceBetween: 10,
      loop: true,
      effect: 'coverflow',
      grabCursor: true,
      centeredSlides: true,
      coverflowEffect: {
        rotate: 0,
        stretch: 10,
        depth: 100,
        modifier: 2.4,
        slideShadows: true,
      },
      navigation: {
        nextEl: '#homepage-flip-slider-{{ section.id }} .swiper-button-next.flip-slider-button-next',
        prevEl: '#homepage-flip-slider-{{ section.id }} .swiper-button-prev.flip-slider-button-prev',
      },
      pagination: {
        el: '#homepage-flip-slider-{{ section.id }} .swiper-pagination',
        clickable: true,
      },
      breakpoints: {
        320:{
          slidesPerView: 1.3,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 2.4,
          spaceBetween: 20,
        },
        1024: {
          slidesPerView: 2.4,
          spaceBetween: 20,
        },
        1440: {
          slidesPerView: 2.4,
          spaceBetween: 20,
        },
        1600: {
          slidesPerView: 2.4,
          spaceBetween: 20,
        }
        
      }
    });
  });
</script>

{% schema %}
{
  "name": "Centralized Banner Slider",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Section Heading",
      "default": "On-Trend <strong>Picks</strong>"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore Our Promising Line-up"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_top_mob",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom_mob",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 30
    },
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image (optional)"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Image Alt Text",
          "default": "Slider Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Slide Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Centralized Banner Slider",
      "category": "Homepage"
    }
  ]
}
{% endschema %}
