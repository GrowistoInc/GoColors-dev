    }
    .content-btn.banner__buttons{
      display: block;
      text-align: left;
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .Bg-content .banner--desktop-transparent .banner__box{
      max-width:100%;
    }
  }
 
.banner__content.banner__content--middle-left{
  z-index:0;
}
  
  .video-bg-main{
    position:relative;
  }
  .Bg-content{
    /* pointer-events: none; */
    position:absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
  }
  
.vdo-bnr-heading{
    font-size: 45px;
    line-height: 48px;
    margin: 0;
    font-weight: 400;
    padding-bottom: 30px;
    letter-spacing: 0;
    text-transform: none;
}
