{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    /* padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;     */
    padding-bottom: 18px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      
    }
  }
  /* .desktop_related_slider{
    padding-left:25px;
  } */
  .desktop_related_slider .related-products{
        padding-left: 0;
        padding-right: 0;
        /* margin: 0 0 0 25px; */
  }
  .swiper.related-product-swiper .swiper-wrapper{
    padding-left:0px;
    margin-top: 0;
  }

  .related-product-swiper  .swiper-button-next.swiper-button-disabled,.related-product-swiper .swiper-button-prev.swiper-button-disabled {
  opacity:0;
}
.related-product-swiper .swiper-button-next,.related-product-swiper .swiper-button-prev{
  position: absolute;
  top:40%;
  /* top: var(--swiper-navigation-top-offset,50%); */
  width: calc(var(--swiper-navigation-size)/ 44 * 27);
  height: var(--swiper-navigation-size);
  margin-top: calc(0px - (var(--swiper-navigation-size)/ 2));
  z-index: 10;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--swiper-navigation-color,var(--swiper-theme-color));
  color: black;
  height: 3.5rem;
  width: 3.5rem;
  border-radius: 50%;
  background-color: #ffffff;
}
.related-product-swiper .swiper-button-next::after,.related-product-swiper .swiper-button-prev::after{
  border-radius:50%;
  background-color:#ffffff;
  font-size: 18px;
}

.related-product-swiper .swiper-button-prev::after {
	content: 'prev';
}
.related-product-swiper .swiper-button-next::after {
	content: 'next';
}
.related-product-swiper .swiper-button-next{
  right: 15px;
  left: unset;
}
.related-product-swiper .swiper-button-prev,.related-product-swiper .swiper-button-next {
  font-family: swiper-icons;
  text-transform: none !important;
  letter-spacing: 0;
  font-variant: initial;
  line-height: 1;
  font-size: 18px;
}
    @media screen and (max-width: 749px) {
    .swiper.related-product-swiper {
      width: 100%;
      overflow: hidden;
    }
      .related-product-swiper .swiper-button-next{
  right: 2px;
  left: unset;
}
    /* .related-products__heading {    	
    	font-size: 20px;
    } */
    .swiper.related-product-swiper .swiper-wrapper{
      flex-wrap: unset;
      margin-bottom: 0;
    }
    .swiper.related-product-swiper  .swiper-wrapper .swiper-slide{
        max-width:100%;
        width: 100%;
      }
      .swiper-scrollbar {
        background: #b7b7b7;
        height: 4px;
      }
      .swiper-scrollbar .swiper-scrollbar-drag {
        background: #000;
        border-radius: 2px;
        display: block;
      }
      .card__information.similar-product-info{
            padding-bottom: 0;
        padding-top: 3px;
      }
      .related-products__heading { 
        font-size: 20px;
        text-align: left;
      }
  }
{%- endstyle -%}

<div class="desktop_related_slider color-{{ section.settings.color_scheme }} gradient">
  <product-recommendations
    class="related-products section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    data-url="{{ routes.product_recommendations_url }}?limit={{ section.settings.products_to_show }}"
    data-section-id="{{ section.id }}"
    data-product-id="{{ product.id }}"
  >
    {% if recommendations.performed and recommendations.products_count > 0 %}
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
     <div class="swiper related-product-swiper">
      <ul
        class="swiper-wrapper"
        role="list"
      >
        {% assign skip_card_product_styles = false %}
        {% for recommendation in recommendations.products %}
          <li class="swiper-slide">
            {% render 'card-product',
              card_product: recommendation,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_mrp_label:section.settings.show_mrp_label,
              show_rating: section.settings.show_rating,
              skip_styles: skip_card_product_styles
            %}
          </li>
          {%- assign skip_card_product_styles = true -%}
        {% endfor %}
      </ul>
       <div class="swiper-button-next"></div>
       <div class="swiper-button-prev"></div>
       <div class="swiper-scrollbar"></div>
     </div>
    {% endif %}
  </product-recommendations>
  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>


