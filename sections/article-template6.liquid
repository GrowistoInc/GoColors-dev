<div class="page-width blog6" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
      <!-- Title -->
    <h1>{{ article.title }}</h1>
    <div class="blog-article-wrapper">
  <!-- LEFT: Main Content -->
  <div class="blog-main">

    <!-- Subtitle from metafield -->
    {% if article.metafields.custom.subtitle %}
      <p class="blog-subtitle">{{ article.metafields.custom.subtitle }}</p>
    {% endif %}

    <!-- Featured image -->
    {% if article.image %}
      <img src="{{ article.image | img_url: '800x' }}" alt="{{ article.title }}" style="width: 100%; margin-bottom: 1rem;">
    {% endif %}

    <!-- Author, date, comments -->
    <div class="blog-meta">
      {{ article.comments_count }} Comments &nbsp;|&nbsp;
      {{ article.published_at | date: "%b %d, %Y" }}
    </div>

    <!-- Content -->
    <div class="blog-content page-width">
      {{ article.content }}
    </div>
     {% comment %} {% render 'blog-newsletter' %} {% endcomment %}

{% form article %}
  
  <h3 id="add-comment-title">{{ 'blogs.comments.form_title' | t }}</h3>

  {% if form.errors %}
    <div class="feedback error">
      {{ form.errors | default_errors }}
    </div>
  {% endif %}

  <div class="form">
    <div class="input-row">
      <input aria-label="{{ 'blogs.comments.name' | t }}" placeholder="{{ 'blogs.comments.name' | t }}" required type="text" name="comment[author]" id="comment-author" value="{{ form.author }}" />
    </div>

    <div class="input-row">
      <input aria-label="{{ 'blogs.comments.email' | t }}" placeholder="{{ 'blogs.comments.email' | t }}" required type="email" name="comment[email]" id="comment-email" value="{{ form.email }}" />
    </div>

    <div class="input-row">
      <textarea aria-label="{{ 'blogs.comments.message' | t }}" placeholder="{{ 'blogs.comments.message' | t }}" required name="comment[body]" id="comment-body">{{ form.body }}</textarea>
    </div>

    <div class="wide-action">
      <input type="submit" value="{{ 'blogs.comments.post' | t }}" />
    </div>
  </div>
{% endform %}
<!-- Comment form -->
        <!-- Show approved comments -->
{% if article.comments_count > 0 %}
  <div class="comments-section">
    <h3>{{ article.comments_count }} Comments</h3>

    {% for comment in article.comments %}
      <div class="comment">
        <div class="comment-avatar">
          <img src="{{ 'https://cdn.shopify.com/s/files/1/0598/8158/6848/files/guest-comment.png?v=1754894628' }}" alt="Avatar">
        </div>
        <div class="comment-body">
          <div class="comment-header">
            <strong class="comment-author">{{ comment.author }}</strong>
            {% assign now = 'now' | date: '%s' %}
{% assign comment_time = comment.created_at | date: '%s' %}
{% assign diff_seconds = now | minus: comment_time %}
{% assign diff_minutes = diff_seconds | divided_by: 60 %}
{% assign diff_hours = diff_minutes | divided_by: 60 %}
{% assign diff_days = diff_hours | divided_by: 24 %}
{% assign diff_months = diff_days | divided_by: 30 %}
{% assign diff_years = diff_days | divided_by: 365 %}

<span class="comment-time">
  {% if diff_minutes < 60 %}
    {{ diff_minutes }} minute{% if diff_minutes != 1 %}s{% endif %} ago
  {% elsif diff_hours < 24 %}
    {{ diff_hours }} hour{% if diff_hours != 1 %}s{% endif %} ago
  {% elsif diff_days < 30 %}
    {{ diff_days }} day{% if diff_days != 1 %}s{% endif %} ago
  {% elsif diff_months < 12 %}
    {{ diff_months }} month{% if diff_months != 1 %}s{% endif %} ago
  {% else %}
    {{ diff_years }} year{% if diff_years != 1 %}s{% endif %} ago
  {% endif %}
</span>

          </div>
          <p class="comment-text">{{ comment.content }}</p>
  
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}
  
    <!--related Article -->

<div class="related-articles">
  <div class="featured-heading-block">
    <h3>You May Also Like</h3>
    <div> &nbsp;</div>
  </div>

  <div class="related-article-wrapper">
    {% assign related_articles = article.metafields.custom.you_may_also_like.value %}
    {% for item in related_articles %}
      <a href="{{ item.article_link }}" class="article-card">
        {% if item.banner %}
          <img src="{{ item.banner | image_url: width: 800 }}" alt="{{ item.title }}">
        {% endif %}
        <p class="article-title">{{ item.title }}</p>
      </a>
    {% endfor %}
  </div>
</div>
  </div>
  <!-- RIGHT: Sidebar -->
  <div class="blog-sidebar">
    <!-- Featured Posts -->
    <div class="featured-posts">
      <div class="featured-heading-block">
      <h3>FEATURED</h3>
      <div>&nbsp; </div>
      </div>
      {% assign featured_articles = article.metafields.custom.featured_blog.value %}
      {% for item in featured_articles %}
        <div class="featured-item">
          {% if item.banner %}
            <img src="{{ item.banner | img_url: '150x' }}" alt="{{ featured.title }}">
          {% endif %}
          <a href="{{ item.article_link }}">{{ item.title }}</a>
        </div>
      {% endfor %}
    </div>

    <!-- Butter Yellow Product (from metafield) -->
{% assign butter_products = article.metafields.custom.product.value %}

{% if butter_products %}
  <div class="butter-yellow">
     <div class="featured-heading-block">
      <h3>BUTTER YELLOW</h3>
      <div> &nbsp;</div>
      </div>
    <div class="custom-product-grid">
      {% for product in butter_products %}
        {% if product != blank %}
          <a href="{{ product.url }}" class="product-card">
            <img src="{{ product.featured_image | img_url: '300x' }}" alt="{{ product.title }}">
            <p class="product-vandor">{{ product.vendor }}</p>
            <p class="yellow-product-title">{{ product.title }}</p>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endif %}
  </div>
  </div>
