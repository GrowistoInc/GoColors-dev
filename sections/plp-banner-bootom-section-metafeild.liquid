{%- if collection.metafields.custom.collection_bottom_banner.value != blank -%}
{{ 'binary.css' | asset_url | stylesheet_tag }}
<style>  
  .plp-botm-banner img{width:100%;height:100%;
  }
</style>
 {%- assign banners = collection.metafields.custom.collection_bottom_banner.value -%}
<div class="page-width plp-botm-banner">
{%- for banner in banners -%}
  <img class=" {%  if forloop.first %} small-hide  {% else %}large-up-hide medium-hide{%  endif %}"src="{{ banner | img_url: '' }}" >
{%-  endfor -%}
</div>
{%- endif -%}
{% schema %}
  {
    "name": "PLP Bottom Banner",
    "class": "fw-img-bnr",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 0
      }, 
      {
        "type": "range",
        "id": "padding_top_mob",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding top Mobile",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom_mob",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom Mobile",
        "default": 0
      },
        {
          "type": "checkbox",
          "id": "add-page-width",
          "label": "Add Page Width ",
          "default":false
        }
    ],
   
    "presets": [
      {
      "name": "PLP Bottom Banner"
      }
    ]
  }
{% endschema %}