<style>
 .colors-container{
     display: none;
 }
 .color-block a{
    display:block;
    width:100%;
    height:100%;
 }
  .color-block p.color-text {
      font-size: 14px;
      padding: 17px 0 0;
    font-weight:600;
    text-align: center;
  }
  .colors-container-mobail{
    display:block;
    padding:2rem 0 0 ;
    
  }
  .fall-color-container.page-wrapper{
    padding: 45px 0 30px !important;
  }
  .fall-color-container h2{
    padding-bottom:0;
    font-size:20px;
    font-weight:400;
  }
  .fall-color-container h2{
    text-decoration:underline;
  }
@media (min-width:750px) {
  .fall-color-container h2{
    font-size:30px;
  }
  .colors-container{
     display: flex;
     flex-wrap: wrap;
     justify-content: flex-start;    
     padding:4rem 0 4rem;
     row-gap:30px;
     column-gap: 42px;
  }
  .color-block {
    width: 100px;
    min-width: 80px;
    text-align: center;
  }
  .color-block img {
    height: 75px;
    width: 75px;
  }
  .colors-container-mobail{
     display:none;
  }   
   .fall-color-container.page-wrapper{
    padding:2rem 0 0 !important;
  }
}
  @media screen and (min-width:1400px){
    .colors-container{
      column-gap: 50px;
      justify-content: flex-start;
    }
  }
</style>
<div class="fall-color-container page-wrapper">
  <h2 class="heading">{{ section.settings.heading }}</h2>
<div class="colors-container">
  {%for block in section.blocks%}
    <div class="color-block">
         <a href="{{ block.settings.color_link }}">
            <img src="{{ block.settings.image | img_url: '' }}">
            <p class="color-text"> {{ block.settings.text_wrapp }} </p>
         </a>
      </div>
  {%endfor%}
</div>
 <div class="swiper colors-container-mobail">
  <div class="swiper-wrapper">
  {%for block in section.blocks%}
    <div class="swiper-slide color-block">
      <a href="{{ block.settings.color_link }}">
            <img src="{{ block.settings.image | img_url: '' }}">
            <p class="color-text"> {{ block.settings.text_wrapp }} </p>
        </a>
      </div>
  {%endfor%}
    </div>
</div>
</div>

{% schema %}
{
   "name":"fall-colors",
   "settings":[
      { 
         "type":"text",
         "id":"heading",
         "label":"heading",
         "default":"FALL COLORS"
      }
   ],
   "blocks":[
      {
         "type":"colors",
         "name":"fall-colors",
         "settings":[
            {
               "type":"text",
               "id":"text_wrapp",
               "label":"color name"
               
            },
            {
               "type":"image_picker",
               "id":"image",
               "label":"color"
            },
           {
              "type": "url",
             "id": "color_link",
             "label": "color link"
            }
         ]
      }
   ],
   "presets":[
      {
         "name":"fall-colors",
         "category":"color",
         "blocks":[
            {
               "type":"colors"
            },
            {
               "type":"colors"
            }
            
         ]
      }
   ]
}

{% endschema %}

  