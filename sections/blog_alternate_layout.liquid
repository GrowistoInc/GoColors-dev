<style>
   .page-wrapper.section-{{ section.id }}-padding{
    padding:{{ section.settings.mob_padding_top }}px 15px {{ section.settings.mob_padding_bottom }}px;
  }
 .blog_layout {display: flex; align-items: center;flex-direction: row;gap: 15px;flex-direction: column-reverse;padding-bottom: 2rem;position: relative;top: 0; bottom: 0;left: 0;right: 0;margin-bottom: 2rem;}.blog_layout::last-child {margin-bottom:0px}
  .blog_layout > div {width: 100%;flex: 100%;}
  p.article_date {font-size: 14px;padding-bottom: 0; text-transform: uppercase;}
  .blog_description div {font-size: 20px;text-align: center;font-weight: 600;}
  .blog_description a {font-size: 14px; text-decoration: underline;font-weight: 600;}
  .blog_img img {width: 100%; height: 100%;}
  .page-wrapper.section-{{ section.id }}-padding h2{font-weight: 600;text-transform: uppercase;width: fit-content;border-bottom: 2px solid #000;margin: 0 auto 30px;text-transform: uppercase;padding-bottom: 0;font-size: 20px;}
  .blog_description .blog_description_subheading{text-align: left;font-weight: 400; padding-top: 15px;font-size: 16px;}
@media screen and (min-width:1200px)  {
  .page-wrapper.section-{{ section.id }}-padding{padding:{{ section.settings.padding_top }}px 50px {{ section.settings.padding_bottom }}px;}
  .blog_layout {flex-direction:row;gap: 50px;padding-bottom: 40px;}
  .blog_layout:nth-child(even) {flex-direction: row-reverse;}
  .blog_description div{font-size: 26px;text-align: left;}
  .blog_description a {position: initial;}
  .page-wrapper.section-{{ section.id }}-padding h2{font-size: 30px;}
  .blog_description .blog_description_subheading{font-size: 18px;}
}
</style>
<section class="page-wrapper section-{{ section.id }}-padding ">
  <h2>BLOGS</h2>
   
    
     {% for block in section.blocks %}  
       <div class="blog_layout">
      {% assign article = block.settings.article %}      
      <div class="blog_img">
          <img src="{{ article.image | img_url: '' }}">
      </div>        
      <div class="blog_description"> 
          <div>{{ block.settings.blog_heading }}</div>
          {% if block.settings.blog_description != blank %}<div class="blog_description_subheading">{{ block.settings.blog_description }}</div>{% endif %}
          <a href="{{ article.url }}">Read More</a>
      </div>        
        </div>
      {% endfor %}
   
</section>
{% schema %}
  {
    "name": "Blogs Alternate Layout",
    "settings": [
      {
        "type": "text",
        "id":"heading",
        "label":"heading",
        "default":"BLOGS"
      },     
       {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 50
    },
      {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 50
    },
      {
      "type": "range",
      "id": "mob_padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Mobile Padding top",
      "default": 20
    },
      {
      "type": "range",
      "id": "mob_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Mobile Padding bottom",
      "default": 50
    }
    ],
    "blocks": [
      {
        "type": "blogs_data",
        "name":"Blogs Data",
        "settings": [         
          {
            "type": "article",
            "id":"article",
            "label": "Add article"
          },
          {
            "type": "text",
            "id":"blog_heading",
            "label":"Blog Heading"
          },
          {
            "type":"richtext",
            "id": "blog_description",
            "label": "Blog Description"
          }
        ]
      }
    ],
    
    "presets": [
      {
        "name": "Blogs Alternate Layout"
      }
    ]
  }
{% endschema %}