<style>
  .blogTemplate8 .blog-content img {
    width: 100%;
    height: 100%;
  }


</style>
<section class="blog-main section-{{ section.id }} page-width page-width--narrow blogTemplate8"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">

  <!-- Title -->
  <h1>{{ article.title }}</h1>

  <!-- Meta -->
  <div class="blog-meta">
    {% comment %} <span>{{ article.author }} </span> {% endcomment %}
    <span>{{ article.published_at | date: "%B %d, %Y" }}</span>
  </div>

  <!-- Subtitle -->
  {% if section.settings.show_subtitle and article.metafields.custom.blog8_subtitle %}
    <p class="blog-subtitle article-summary">{{ article.metafields.custom.blog8_subtitle }}</p>
  {% endif %}

  <!-- Featured image -->
  {% if article.image %}
    <img src="{{ article.image | img_url: '1200x' }}" alt="{{ article.title }}" class="blog8-article-banner">
  {% endif %}

  <!-- Content -->
  <div class="blog-content-wrapper">
    <div class="blog-content">
      {{ article.content }}
    </div>
  </div>

 <!-- Look Section -->
{% if article.metafields.custom.blog8_looks.value %}
  {% assign look_sections = article.metafields.custom.blog8_looks.value %}

  {% for look_section in look_sections %}
    <div class="blog-look-section">
      <!-- Title -->
      {% if look_section.title %}
        <h2 class="look-title">{{ look_section.title }}</h2>
      {% endif %}

      <!-- Banner Image -->
      {% if look_section.banner_image %}
        <div class="look-banner">
          <img src="{{ look_section.banner_image | image_url: width: 800 }}" alt="{{ look_section.title }}">
        </div>
      {% endif %}

      <!-- Description (Richtext) -->
      {% if look_section.description %}
        <div class="look-description">
          {{ look_section.description | metafield_tag }}
        </div>
      {% endif %}

      <!-- Products List -->
    {% if look_section.products.value %}
      <div class="look-products">
        <p><strong>Get The Look:</strong></p>
        <div class="look-products-grid">
          {% for product in look_section.products.value %}
            {% if product != blank %}
              <a href="{{ product.url }}" class="look-product-card">
                <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
                <div class="product-content-wrap">
                      {% if product.metafields.Loungename.lounge_name != blank %}
                      <h4>{{ product.title | escape }}</h4>
                      
                    
                    <div class="lang-sec truncate-three-lines">
                      {% if product.metafields.Loungename.lounge_name != blank %}
                         <span class="lang1">{{ product.metafields.Loungename.lounge_name }}</span>{% if product.metafields.Color.color != blank %}<span class="lang1">{{product.metafields.Color.color }}{% endif %} </span>
                       {% endif%}
        			</div>
                  {% else %}
                    
                      <h4>{{ product.title | escape }}</h4>
                    <div class="lang-sec truncate-three-lines">
                    {% if product.metafields.Color.color != blank %}
                    {% assign prosku = product.selected_or_first_available_variant.sku | split:"-" %}
                     {{product.type}} : {{ prosku[0] }} | {{product.metafields.Color.color }} 
                     {% comment %} {{product.type}} : {{product.metafields.Color.color }} {% endcomment %}
                    {% endif%}
                    </div>
                  {% endif %}
                    <p class="product-price">
                    {{ product.price | money }}
                    {% if product.compare_at_price > product.price %}
                        <span class="product-compare">{{ product.compare_at_price | money }}</span>
                        {% assign discount = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                        <span class="product-discount">{{ discount }}% Off</span>
                    {% endif %}
                    </p>
                    <button class="shop-now">Shop Now</button>
                </div>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
    </div>
  {% endfor %}
{% endif %}



  <!-- Look Section End -->

  <!-- Key Takeaways -->
     {% if article.metafields.custom.key_takeaways %}
        <div class="key-takeaway">
          {{ article.metafields.custom.key_takeaways | metafield_tag }}
        </div>
      {% endif %}
    <!-- Key Takeaways end -->

  <!-- Comments -->
  {% if section.settings.show_comments %}
    {% form article %}
      <h3 id="add-comment-title">What do you think?</h3>
      {% if form.errors %}
        <div class="feedback error">{{ form.errors | default_errors }}</div>
      {% endif %}

      <div class="form">
        <div class="input-row">
          <input aria-label="{{ 'blogs.comments.name' | t }}" placeholder="{{ 'blogs.comments.name' | t }}" required type="text" name="comment[author]" id="comment-author" value="{{ form.author }}">
        </div>
        <div class="input-row">
          <input aria-label="{{ 'blogs.comments.email' | t }}" placeholder="{{ 'blogs.comments.email' | t }}" required type="email" name="comment[email]" id="comment-email" value="{{ form.email }}">
        </div>
        <div class="input-row">
          <textarea aria-label="{{ 'blogs.comments.message' | t }}" placeholder="{{ 'blogs.comments.message' | t }}" required name="comment[body]" id="comment-body">{{ form.body }}</textarea>
        </div>
        <div class="wide-action">
          <input type="submit" value="{{ 'blogs.comments.post' | t }}">
        </div>
      </div>
    {% endform %}
  {% endif %}
</section>

