<!-- image-slider -->
<style>
.slider-img{max-width: 100%;width:100%;height:100%;border-radius:10px; }
.spotlite_section{padding-bottom:70px;}
@media screen and (max-width: 749px) {.spotlite_section {padding-bottom: 40px;}}
</style>
{{ 'custom-image-slider.css' | asset_url | stylesheet_tag }}
 <script>
  document.addEventListener("DOMContentLoaded", function () {
  var swiper = new Swiper(".hm-custom-image-slider", {
    slidesPerView: 2.65,
    loop: true,
    spaceBetween: 10,
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    navigation: {
      nextEl: ".spotlite-swiper-next",
      prevEl: ".spotlite-swiper-prev",
    },
    breakpoints: {
      320: {
        slidesPerView: 1,
        spaceBetween: 20,
      },
      640: {
        slidesPerView: 2,
        spaceBetween: 20,
      },
      768: {
        slidesPerView: 2.2,
        spaceBetween: 20,
      },
      1024: {
        slidesPerView: 2.2,
        spaceBetween: 20,
      },
      1600: {
        slidesPerView: 2.65,
        spaceBetween: 20,
      },
    },
  });
});
</script>  
  <h2 class="">{{ section.settings.heading }}</h2>
  <div class="swiper mySwiper hm-custom-image-slider">
    <div class="swiper-wrapper">
       {%- for block in section.blocks-%}
          <div class="swiper-slide">
      <a href="{{ block.settings.link }}">
        <img class="slider-img" src="{{ block.settings.image | img_url: '700x620' }}" width="700" height="620" alt="{{ block.settings.image.alt }}">
      </a>
    </div>
      {%- endfor -%}
    </div>
    <div class="spotlite-swiper-next"> </div>
    <div class="spotlite-swiper-prev"> </div>
  </div>
<!-- Initialize Swiper -->


{% schema %}
{
  "name": "Custom Image Slider",
  "class": "spotlite_section sub-tab-coll-contentss",
  "settings": [
    {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [        
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image Slider"
    }
  ]
}
{% endschema %}
