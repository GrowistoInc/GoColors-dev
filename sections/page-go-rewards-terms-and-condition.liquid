

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mob }}px;
    padding-bottom: {{ section.settings.padding_bottom_mob}}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .rewards-t-and-c-page-title {
      font-size:20px !important;
    }
  }
  .rewards-t-and-c-page-title {
      display: inline-block;
      background-color:{{section.settings.title_color}};
      color: {{section.settings.title_font_color}};
      padding: 10px 20px;
      margin-bottom: 10px;
      text-decoration: none;
      border-radius: 5px;
      line-height:normal;
      font-size:14px;
      /* text-decoration: underline; */
      text-transform: capitalize;
    }
  
  /* .rewards_wrapper_t_and_c{
    text-align:center;
  } */
  .rewards_content_data{
    /* max-width:72rem; */
    /* max-width:80rem; */
    max-width:1280px;
    margin:0 auto;
  }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding rewards_wrapper_t_and_c" id="terms_and_conditions">
  <h2 class="rewards-t-and-c-page-title page-title h2{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {% if section.settings.page != blank %}
      {{ section.settings.page.title | escape }}
    {% else %}
      {{ page.title | escape }}
    {% endif %}
  </h2>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} rewards_content_data">
    {{ section.settings.page.content }}
  </div>
</div>

{% schema %}
{
  "name": "Rewards T&C ",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "Selcet Page To Show Details Of Page"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Background Color",
      "default":"#ff5ba5"
    },
    {
      "type": "color",
      "id": "title_font_color",
      "label": "Title Font Color",
      "default":"#FFFFFF"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "padding_top_mob",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "tTop Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mob",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    },
  ],
  "presets": [
    {
      "name": "Rewards T&C",
    }
  ]
}
{% endschema %}
